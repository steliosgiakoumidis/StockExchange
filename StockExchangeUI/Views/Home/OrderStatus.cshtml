@model IEnumerable<StockExchange.Models.OrderStatusWithTransactionDetails>
<h1>Order statuses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumberOfStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfStocksTransacted)
            </th>
            <th class="important">
                @Html.DisplayNameFor(model => model.Completed)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalNumberOfStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfStocksTransacted)
                </td>
                <td class="important">
                    @Html.DisplayFor(modelItem => item.Completed)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to main menu</a>
</div>


<!-- CSS part -->

<style>
    .important {
        display: block;
        width: 100%;
        background-color: aliceblue;
        color: black;
        text-align: center;
    }
</style>