@model StockExchange.Models.OrderWithCurrentPrice

<h1>Buy And Sell Stocks</h1>

<div class="row">
    <div class="col-md-4">

        <div class="important">
            <h2>Current Price -> @Html.DisplayFor(item => item.CurrentPrice) SEK</h2>
        </div>
        
        <form asp-controller="Home" asp-action="SendOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.CustomerId" class="control-label"></label>
                <input asp-for="Order.CustomerId" class="form-control" />
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.NumberOfStocks" class="control-label"></label>
                <input asp-for="Order.NumberOfStocks" class="form-control" />
                <span asp-validation-for="Order.NumberOfStocks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.StockName" class="control-label"></label>
                <input asp-for="Order.StockName" class="form-control" />
                <span asp-validation-for="Order.StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Price" class="control-label"></label>
                <input asp-for="Order.Price" class="form-control" />
                <span asp-validation-for="Order.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Action" class="control-label"></label>
                <select asp-for="Order.Action" asp-items="Html.GetEnumSelectList<StockExchange.Models.Action>()" class="form-control"></select>
                <span></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Order" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to main menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}

<style>
    .important{
        background-color: red;
                display: block;
        width: 100%;
        border: solid;
        color: black;
        font-size: 20px;
        text-align: center;
        margin-bottom: auto;
        margin-top: auto;
    }
</style>
